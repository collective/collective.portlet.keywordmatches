<dl class="portlet portletKeywordMatches"
    i18n:domain="collective.portlet.keywordmatches">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span>
           Related Items
        </span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd"
        tal:define="related_items view/getRelatedItems;
                                plone_view context/@@plone;
                                getIcon nocall:plone_view/getIcon;"
                    >
        <tal:rep repeat="item related_items">
          <a href=""
             tal:define="item_icon python:getIcon(item);"
             tal:attributes="href item/getURL;
                             title item/Description">
                               
	            <img tal:replace="structure item_icon/html_tag" />
	            <span tal:content="item/Title"></span>
            
          </a>
          <br/>
             

             
             
             
             
        </tal:rep>
    </dd>

    <dd class="portletFooter">
        <span class="portletBotomLeft"></span>
        <span>
           <a href="" tal:attributes="href view/getAllRelatedItemsLink">more ...</a>
        </span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
